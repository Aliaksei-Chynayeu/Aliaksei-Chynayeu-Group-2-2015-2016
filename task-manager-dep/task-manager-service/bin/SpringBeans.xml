<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="abstractServiceRest" abstract="true"
		class="com.epam.jmp.taskmanager.service.rest.AbstractServiceRest"
		init-method="init">
	</bean>

	<bean id="taskServiceRest"
		class="com.epam.jmp.taskmanager.service.rest.task.TaskServiceRest"
		parent="abstractServiceRest">
		<property name="dao" ref="taskHibernateDAO" />
	</bean>
	<bean id="userServiceRest"
		class="com.epam.jmp.taskmanager.service.rest.user.UserServiceRest"
		parent="abstractServiceRest">
		<property name="dao" ref="userHibernateDAO" />
	</bean>

	<bean id="abstractHibernateDAO"
		class="com.epam.jmp.taskmanager.data.dao.hibernate.AbstractHibernateDAO"
		abstract="true" init-method="init">
		<property name="sessionFactory" ref="hibernateSessionFactory" />
	</bean>

	<bean id="taskHibernateDAO"
		class="com.epam.jmp.taskmanager.data.dao.hibernate.TaskHibernateDAO"
		parent="abstractHibernateDAO" />
	<bean id="userHibernateDAO"
		class="com.epam.jmp.taskmanager.data.dao.hibernate.UserHibernateDAO"
		parent="abstractHibernateDAO" />

	<bean id="hibernateSessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean"
		scope="singleton">
		<property name="dataSource" ref="dataSource" />
		<!--property name="mappingLocations" -->
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.format_sql">true</prop>
			</props>
		</property>
	</bean>

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		scope="singleton">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/task-manager-db" />
		<property name="username" value="root" />
		<property name="password" value="password" />
	</bean>
</beans>